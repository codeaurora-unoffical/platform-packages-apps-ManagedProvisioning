<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cross_profile_item_icon"
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/cross_profile_item_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/cross_profile_item_icon"
            android:layout_toStartOf="@+id/cross_profile_item_vertical_divider"/>
        <TextView
            android:id="@+id/cross_profile_item_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_below="@+id/cross_profile_item_title"
            android:layout_toEndOf="@+id/cross_profile_item_icon"
            android:layout_toStartOf="@+id/cross_profile_item_vertical_divider"/>
        <View
            android:id="@+id/cross_profile_item_vertical_divider"
            android:layout_width="1dp"
            android:layout_height="28dp"
            android:background="@android:color/darker_gray"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/cross_profile_item_toggle"
            android:layout_marginStart="8dp"/>
        <Switch
            android:id="@+id/cross_profile_item_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:checked="true"
            android:layout_marginStart="8dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/cross_profile_item_horizontal_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>
</LinearLayout>
